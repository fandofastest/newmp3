<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15.5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageartist"
            android:layout_width="31.3dp"
            android:layout_height="31.3dp"
            android:layout_marginLeft="14.3dp"
            android:src="@drawable/ic_icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:textColor="#4f4f4f"
                android:gravity="center_horizontal"
                android:text="All offline songs"
                />

            <TextView
                android:id="@+id/artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.7sp"
                android:textColor="#8b8b8b"
                android:gravity="center_horizontal"
                android:text="384 songs"
                />





        </LinearLayout>

        <ImageView
            android:id="@+id/buttonPanel"
            android:layout_width="7dp"
            android:layout_height="12.7dp"
            android:layout_gravity="center"
            android:layout_marginRight="21dp"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="57.3dp"
        android:layout_marginRight="28dp"
        android:background="#f1f1f1"/>

</LinearLayout>